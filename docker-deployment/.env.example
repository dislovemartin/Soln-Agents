# SolnAI Environment Configuration

# Core Settings
JWT_SECRET=changeme_to_a_secure_random_string_of_at_least_32_chars
AUTH_TOKEN=changeme_to_a_secure_password
NODE_ENV=production
PORT=3001

# Storage Paths
SOLNAI_STORAGE_PATH=/home/nvidia/system_monitoring/SolnAI/storage
SOLNAI_AGENTS_PATH=/home/nvidia/system_monitoring/SolnAI/agents

# LLM Provider Settings
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key
# GROQ_API_KEY=your_groq_api_key

# Embedding Settings
EMBEDDING_ENGINE=openai
EMBEDDING_MODEL_PREF=text-embedding-ada-002

# Vector Database Settings
VECTOR_DB=lancedb

# Browser Tools MCP Settings
BROWSER_TOOLS_PORT=3025
BROWSER_TOOLS_MCP_PORT=3027
BROWSER_TOOLS_SCREENSHOTS_PATH=./screenshots

# CrewAI Service Settings
CREWAI_SERVICE_PORT=8001

# Agent Metrics Settings
ENABLE_AGENT_METRICS=true
METRICS_RETENTION_DAYS=30

# Telemetry
TELEMETRY_ENABLED=false

# Multi-user Mode (optional)
# MULTI_USER_MODE=true
# DATABASE_TYPE=postgres
# DATABASE_URL=postgres://user:password@localhost:5432/solnai